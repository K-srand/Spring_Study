<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
   <!-- member 테이블의 각 속성 값 등록 -->

<mapper namespace="mapper.member">
	<resultMap id="memResult" type="memberVO">
		<result property="id" column="id" />
        <result property="pwd" column="pwd" />
        <result property="name" column="name" />
        <result property="email" column="email" />
        <result property="zip_num" column="zip_num" />
        <result property="address" column="address" />
        <result property="phone" column="phone" />
        <result property="useyn" column="useyn" />
        <result property="indate" column="indate" />
	</resultMap> 

	<!-- 회원 정보 전체 출력 -->
	<select id="selectAllMemberList" resultMap="memResult">
      <![CDATA[
         select * from member 	
      ]]>
	</select>
	
	<!-- 회원 정보 출력 -->
	<select id="login" resultType="memberVO" parameterType="memberVO" >
      <![CDATA[
         select * from member	
		 where id=#{id} and pwd=#{pwd} 	
      ]]>
	</select>
	
	<!-- 회원 가입 -->
     <insert id="insertMember"  parameterType="memberVO">
		<![CDATA[
		 insert into member(id, pwd, name, email, zip_num, address, phone)
		 values(#{id}, #{pwd}, #{name}, #{email}, #{zip_num, jdbcType=VARCHAR}, 
		 #{address, jdbcType=VARCHAR}, #{phone, jdbcType=VARCHAR})
		]]>      
	</insert>
  
</mapper>

